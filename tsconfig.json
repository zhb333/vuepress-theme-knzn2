{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "module": "ES2020",
    "paths": {},
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/.vuepress/**/*", "knzn/**/*"],
  "exclude": ["node_modules", ".temp", "lib", "dist"]
}
