# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
# 使用 Unix-style 风格的换行符
end_of_line = lf
# 在文件尾部添加一行空白行
insert_final_newline = true
# 设置默认编码
charset = utf-8
# 缩进风格为 2 个空格
indent_style = space
indent_size = 2
# 去除行尾空格
trim_trailing_whitespace = true

[*.md]
# Markdown 文件 不能去除行尾空格
trim_trailing_whitespace = false